{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": false, // Smaller production output
        "strict": true, // keep strict for production
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "public", "tests"]
}
